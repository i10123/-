<Window x:Class="QR_Generator.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Success" Height="220" Width="350"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">

    <Border Background="#FF2D2D30" CornerRadius="0" BorderBrush="Red" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Шапка -->
                <RowDefinition Height="*"/>
                <!-- Контент -->
                <RowDefinition Height="60"/>
                <!-- Кнопка -->
            </Grid.RowDefinitions>

            <!-- Шапка -->
            <Border Background="Black" Grid.Row="0" MouseLeftButtonDown="DragWindow">
				<!-- Добавили имя txtTitle -->
				<TextBlock x:Name="txtTitle" Text="Уведомление" Foreground="Red" FontWeight="Bold"
						   VerticalAlignment="Center" Margin="15,0" FontSize="14"/>
            </Border>

            <!-- Контент -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- <Image Source="logo.ico" Height="60" Width="60" Margin="0,0,0,15"/> -->

				<Path x:Name="pathIcon"
                          Data="M9,20.5L4.5,16L5.91,14.59L9,17.67L18.09,8.59L19.5,10L9,20.5Z"
                          Fill="#FF00FF33"
                          Stretch="Uniform" Height="50" Width="50" Margin="0,0,0,15">
					<Path.Effect>
						<DropShadowEffect x:Name="shadowEffect" Color="#FF00FF33" BlurRadius="20" ShadowDepth="0"/>
					</Path.Effect>
				</Path>

                <!-- Текст сообщения -->
                <TextBlock x:Name="txtMessage" 
                           Text="Текст сообщения" 
                           Foreground="White" 
                           FontSize="16" 
                           TextAlignment="Center" 
                           TextWrapping="Wrap" 
                           Margin="20,0"/>
            </StackPanel>

            <!-- Кнопка ОК -->
            <Button Content="ПОНЯТНО" Grid.Row="2" Click="BtnOk_Click" 
                    Margin="100,0,100,15" Height="35" 
                    FontWeight="Bold" Foreground="White" BorderBrush="Black">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Border>
</Window>