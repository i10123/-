<Window x:Class="QR_Generator.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="logo.ico" Title="Авторизация" Height="450" Width="350"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border Background="#FF2D2D30" CornerRadius="0" BorderBrush="Red" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Шапка -->
                <RowDefinition Height="*"/>
                <!-- Контент -->
            </Grid.RowDefinitions>

            <!-- Верхняя панель (как в Main) -->
            <Border Background="Black" Grid.Row="0" MouseLeftButtonDown="DragWindow">
                <DockPanel LastChildFill="False">
                    <TextBlock Text="QR Generator" Foreground="Red" FontSize="14" VerticalAlignment="Center" Margin="15,0" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button Content="✕" Width="30" Click="BtnExit_Click" Background="Red" FontWeight="Bold" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Основной контент -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="30">

                <!-- Заголовок -->
                <TextBlock Text="ВХОД" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="Red" Offset="1"/>
                            <GradientStop Color="#FFFFC5C5" Offset="0.2"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>

                <TextBlock Text="Логин" Foreground="White" Margin="0,5" FontSize="14"/>
                <TextBox x:Name="txtLogin" Height="35" FontSize="16"/>

                <TextBlock Text="Пароль" Foreground="White" Margin="0,15,0,5" FontSize="14"/>
                <PasswordBox x:Name="txtPass" Height="35" FontSize="16" Background="#FF2D2D30" Foreground="White" BorderBrush="Red" BorderThickness="1"/>

                <!-- Поле для ошибок -->
                <TextBlock x:Name="txtError" Text="" Foreground="#FF5555" FontSize="13" Margin="0,10,0,0" TextWrapping="Wrap" HorizontalAlignment="Center"/>

                <!-- Кнопка Войти -->
                <Button Content="ВОЙТИ" Click="BtnLogin_Click" Margin="0,15,0,10" Height="40" Foreground="White" FontWeight="Bold" FontSize="16" BorderBrush="Black">
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="Red" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>

                <!-- Переход на регистрацию -->
                <TextBlock Text="Нет аккаунта?" Foreground="Gray" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                <Button Content="Зарегистрироваться" Click="BtnGoToRegister_Click" Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand" FontSize="14" FontStyle="Italic">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter HorizontalAlignment="Center"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>