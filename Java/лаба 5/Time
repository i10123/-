public class Time {
    private int hours;
    private int minutes;

    public Time() {
        hours = 0;
        minutes = 0;
    }
    private void setHours(int h) {
        if (h >= 0) {
            hours = h;
        } else {
            System.out.println("Часы не могут быть отрицательными. Установлено 0.");
            hours = 0;
        }
    }
    private void setMinutes(int m) {
        if (m >= 0 && m < 60) {
            minutes = m;
        } else {
            System.out.println("Минуты должны быть от 0 до 59. Установлено 0.");
            minutes = 0;
        }
    }
    public int getHours() {
        return hours;    
    }
    public int getMinutes() {
        return minutes;    
    }
    public Time(int h, int m) {
        setHours(h);
        setMinutes(m);
    }
    public int totalMinutes() {
        return hours * 60 + minutes;    
    }

    public boolean equals(Object obj) {
        if (obj instanceof Time other) {
            return hours == other.hours && minutes == other.minutes;
        }
        return false;
    }
@Override
    public String toString() {        return "Время: " + hours + " ч. " + minutes + " мин.";    }
}
